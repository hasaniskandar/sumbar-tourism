<div class="container">
  <div class="row">

    <div class="span3">
      <%= render 'user_navigation' %>
    </div><!--/span-->
    <div class="span9">
      <%= simple_form_for @new_tourism_article, url: create_tourism_article_profile_path(@profile), :html => { :class => 'form-horizontal' } do |f| %>
        <%= f.input :title %>
        <%= f.input :content %>
        <%= f.input :image %>
        <div class="form-actions">
          <%= f.button :submit, :class => 'btn-primary' %>
        </div>

      <% end %>
    </div>

  </div>
</div>

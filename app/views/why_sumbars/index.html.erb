<%- model_class = WhySumbar.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= t 'actions.action', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @why_sumbars.each do |why_sumbar| %>
      <tr>
        <td><%= link_to why_sumbar.id, why_sumbar_path(why_sumbar) %></td>
        <td><%= why_sumbar.title %></td>
        <td><%= truncate(why_sumbar.description, :length => 50) %></td>
        <td><%= image_tag(why_sumbar.image.url(:thumb)) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_why_sumbar_path(why_sumbar), :class => 'btn btn-mini' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      why_sumbar_path(why_sumbar), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      why_sumbar_path(why_sumbar),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_why_sumbar_path,
            :class => 'btn btn-primary' %>

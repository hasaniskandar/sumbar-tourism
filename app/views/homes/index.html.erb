        <div class="moduletable_news">
          <% @tourism_articles.each do |article| %>
            <div class="detail">
              <div class="clearfix">
                <div class="image-news">
                  <%= image_tag(article.image.url(:thumb)) %>
                </div>
                <div class="title-news">
                  <%= link_to truncate(article.title, :length => 80, :separator => ' '), tourism_article_path(article) %>
                </div>
              </div>
              <div class="news-author clearfix">
                <a href=""><%= article.user.username %></a> | <%= l article.created_at, :format => :costum %>
                <span class="pull-right" style="margin-left: 10px;"><%= article.read_count %> <i class="icon-comment"></i></span>
                <span class="pull-right">100 <i class="icon-eye-open"></i></span>
              </div>
            </div>
          <% end %>
        </div>
        <div class="all-news clearfix">
          <%= link_to 'Selanjutnya', tourism_articles_path %>
        </div>
      </div>
    <% end %>



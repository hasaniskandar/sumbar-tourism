      <!-- Acara 1 -->
      <div class="moduletable_event">
        <% @events.each do |event| %>
          <div class="detail clerfix">
            <div class="eventsdate">
              <div class="cont">
                <%= l event.created_at, :format => :only_day %>
                <div class="diain"><%= l event.created_at, :format => :only_date %></div>
                <div class="mesin"><%= l event.created_at, :format => :only_month %></div>
                <div class="anoin"><%= l event.created_at, :format => :only_year %></div>
              </div>
            </div>
            <div class="det_jcal">
              <%= link_to truncate(event.title, :length => 80, :separator => ' '), event_path(event) %>
              <p>
                <%= truncate(event.description, :length => 80, :separator => ' ') %>
              </p>
              <div class="eventdescription clearfix">
                <a href="#"><i class="icon-thumbs-up"></i> 9 tertarik! </a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="all-news clearfix">
        <%= link_to 'Selanjutnya', events_path %>
      </div>
    </div>

    <% if @tourism_articles %>
      <div class="span4"><!-- Berita -->
        <div class="center">
          <h2><span style="color: #ff9900;">Berita Wisata Terbaru</span></h2>
        </div>
        <div class="sub_hr">

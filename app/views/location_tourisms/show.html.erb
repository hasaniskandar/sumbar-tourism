<%- model_class = @location_tourism.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @location_tourism.name %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @location_tourism.address %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @location_tourism.city %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @location_tourism.zip %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @location_tourism.phone %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:web) %>:</strong></dt>
  <dd><%= @location_tourism.web %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:facebook) %>:</strong></dt>
  <dd><%= @location_tourism.facebook %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:twitter) %>:</strong></dt>
  <dd><%= @location_tourism.twitter %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:hours_description) %>:</strong></dt>
  <dd><%= @location_tourism.hours_description %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:facility) %>:</strong></dt>
  <dd><%= @location_tourism.facility %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @location_tourism.description %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:category_loc_tourism_id) %>:</strong></dt>
  <dd><%= @location_tourism.category_loc_tourism_id %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @location_tourism.user.email %></dd><br />

  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= image_tag(@location_tourism.image.url(:medium)) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              location_tourisms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_location_tourism_path(@location_tourism), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_tourism_path(@location_tourism),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

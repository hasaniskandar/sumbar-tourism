<%- model_class = LocationTourism.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <%#*<th><%= model_class.human_attribute_name(:zip) %></th>%>
      <%#*<th><%= model_class.human_attribute_name(:phone) %></th>%>
      <%#*<th><%= model_class.human_attribute_name(:web) %></th>%>
      <%#*<th><%= model_class.human_attribute_name(:facebook) %></th>%>
      <%#*<th><%= model_class.human_attribute_name(:twitter) %></th>%>
      <th><%= model_class.human_attribute_name(:hours_description) %></th>
      <th><%= model_class.human_attribute_name(:facility) %></th>
      <%#*<th><%= model_class.human_attribute_name(:description) %></th>%>
      <th><%= model_class.human_attribute_name(:category_loc_tourism_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @location_tourisms.each do |location_tourism| %>
      <tr>
        <td><%= link_to location_tourism.id, location_tourism_path(location_tourism) %></td>
        <td><%= location_tourism.name %></td>
        <td><%= location_tourism.address %></td>
        <td><%= location_tourism.city %></td>
        <%#*<td><%= location_tourism.zip %></td>%>
        <%#*<td><%= location_tourism.phone %></td>%>
        <%#*<td><%= location_tourism.web %></td>%>
        <%#*<td><%= location_tourism.facebook %></td>%>
        <%#*<td><%= location_tourism.twitter %></td>%>
        <td><%= location_tourism.hours_description %></td>
        <td><%= location_tourism.facility %></td>
        <%#*<td><%= location_tourism.description %></td>%>
        <td><%= location_tourism.category_loc_tourism_id %></td>
        <td><%= location_tourism.user_id %></td>
        <td><%= image_tag(location_tourism.image.url(:thumb)) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_location_tourism_path(location_tourism), :class => 'btn btn-mini' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      location_tourism_path(location_tourism), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      location_tourism_path(location_tourism),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_location_tourism_path,
            :class => 'btn btn-primary' %>

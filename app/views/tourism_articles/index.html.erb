<div class="container">
  <div class="page-header"> <!-- Mengapa Sumbar -->
    <form action="" class="navbar-search pull-right" style="margin-top: 4px" >
      <input style="border-radius: 0 3px 3px 0;" class="span2 pull-right" size="16" type="text" placeholder="Cari berita wisata" value=""/>
    </form>
    <div class="input-append date pull-right" id="dp3" data-date-format="dd-mm-yyyy">
      <span style="margin-top: 4px; border-radius: 3px 0 0 3px;" class="add-on "><i class="icon-th"></i></span>
    </div>
    <h2>Berita Wisata</h2>
  </div>
  <div class="row">
    <div class="span12">

      <ul class="thumbnails">
        <li class="span8">
          <%= render "shared/tourism_article_1", :articles => @tourism_articles[0..0] || [] %>
        </li>

        <li class="span4">
          <%= render "shared/tourism_article_2", :articles => @tourism_articles[1..1] || [] %>
        </li>
      </ul> <!-- Berita Utama -->

      <ul class="thumbnails">
        <%= render "shared/tourism_article_3", :articles => @tourism_articles.to_a.from(2) || [] %>

      </ul>

      <%= paginate @tourism_articles %>
    </div>
  </div>
</div>